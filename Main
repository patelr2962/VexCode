//Potentiometer based straightening
void liftStraight()
{
	int highLift;
	highLift = 80;

	int normLift;
	normLift = 93;

	if(SensorValue[leftPmeter] > SensorValue[rightPmeter])
	{
 		motor[leftLift] = highLift;
 		motor[rightLift] = normLift;
	}
	if(SensorValue[leftPmeter] < SensorValue[rightPmeter])
	{
 		motor[leftLift] = normLift;
 		motor[rightLift] = highLift;
	}
	if(SensorValue[leftPmeter] == SensorValue[rightPmeter])
	{
		motor[leftLift] = normLift;
 		motor[rightLift] = normLift;
	}
}

